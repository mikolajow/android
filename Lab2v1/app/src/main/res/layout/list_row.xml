<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lrow_image"
        android:src="@drawable/uroboros1"
        android:padding="2dp"
        android:adjustViewBounds="true"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:id="@+id/lrow_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uroboros"
            android:textColor="#ffc2556c"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lrow_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pinknyPrawda" />
    </LinearLayout>
    <CheckBox
        android:id="@+id/lrow_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:focusable="false"
        android:focusableInTouchMode="false" />
</LinearLayout>